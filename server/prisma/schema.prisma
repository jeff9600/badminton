generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  author    String?
  date      DateTime @default(now())
  published Boolean  @default(true)
}

model Session {
  id        Int      @id @default(autoincrement())
  date      DateTime
  start     String
  end       String
  location  String?
  level     String?
  coach     String?
  slots     Int?
  available Int?
}